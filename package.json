{
    "name": "angel-lsp",
    "description": "A language server for AngelScript",
    "author": "Microsoft Corporation",
    "license": "MIT",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/sashi0034/angel-lsp"
    },
    "publisher": "sashi0034",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onLanguage:AngelScript",
        "onLanguage:AngelPredefined"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "AngelScript",
                "extensions": [
                    ".as"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "AngelPredefined",
                "filenames": [
                    "as.predefined"
                ]
            }
        ],
        "configurationDefaults": {
            "editor.semanticTokenColorCustomizations": {
                "rules": {
                    "builtin": "#00b0e0"
                }
            }
        },
        "iconThemes": [
            {
                "id": "angel-script-icon",
                "label": "AngelScript Icon",
                "path": "./icons/icons-theme.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^18.14.6",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "eslint": "^8.57.0",
        "mocha": "^10.3.0",
        "typescript": "^5.3.3"
    }
}
